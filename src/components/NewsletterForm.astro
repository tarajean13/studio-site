<form class="flex gap-2 max-w-md w-full" data-netlify="true" name="newsletter" method="POST">
  <input type="hidden" name="form-name" value="newsletter" />
  <input
    type="email"
    name="email"
    placeholder="Your email"
    required
    class="flex-1 bg-transparent border-b border-muted px-0 py-2 text-sm text-primary placeholder:text-muted focus:outline-none focus:border-primary transition-colors"
  />
  <button
    type="submit"
    class="text-sm uppercase tracking-wide text-secondary hover:text-primary transition-colors"
  >
    Subscribe
  </button>
</form>
